$("ul.errors").html("")
<% if @email.errors.any? %>
  <% @email.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".email-index").html("<%= escape_javascript(render 'index') %>")
  $("#email-modal").modal("hide")
<% end %>
